<h2 class="text-green-dark text-center">Games played:{{@games.length}}</h2>

{{#each (take 25 (reverse @games)) as |game|}}
  <div class="bg-blue-lighter p-2 m-2 flex font-bold text-xs">
    <div class="flex-1 text-right p-2" >
      {{game.homeTeam.name}}
    </div>

    <div class="flex-shrink bg-yellow p-2 border-r-2 border-yellow-dark">
      {{game.homeGoals}}
    </div>

    <div class="flex-shrink bg-yellow p-2 border-l-2 border-yellow-dark">
      {{game.awayGoals}}
    </div>

    <div class="flex-1 p-2">
      {{game.awayTeam.name}}
    </div>


  </div>
  
  
  {{!-- <br>{{game.homeTeam.name}} [{{game.homeGoals}}] vs [{{game.awayGoals}}] {{game.awayTeam.name}} --}}
{{/each}}